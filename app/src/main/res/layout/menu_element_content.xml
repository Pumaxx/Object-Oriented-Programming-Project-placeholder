<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="5dp"
    android:background="@drawable/bottom_line"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="2dp"
    >

    <Button
        android:id="@+id/btMenuElementDelete"
        android:layout_width="16dp"
        android:layout_height="25dp"
        android:text="X"
        android:textSize="10sp"
        android:padding="0dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMenuElementEdit"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:padding="0dp"
        android:text="Edit"
        android:textSize="10sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/btMenuElementDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRecipeTitle"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Recipe Title"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btGoToRecipe"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:padding="0dp"
        android:text="â–¶"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRecipeTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:visibility="invisible"
        android:id="@+id/btSetMenuElement"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:padding="0dp"
        android:text="SET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRecipeTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/etSetMenuElementTitle"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:hint="Enter title"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

